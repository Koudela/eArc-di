{
    "name": "earc/di",
    "description": "eArc - the explicit architecture framework - dependency injection component",
    "type": "library",
    "version": "3.1",
    "minimum-stability": "dev",
    "prefer-stable" : true,
    "require": {
        "php": "^8.0 || ^7.2"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas Koudela",
            "email": "thomas@koudela.net"
        }
    ],
    "autoload": {
        "psr-4": {
            "eArc\\DI\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "eArc\\DITests\\" : "tests"
        }
    },
    "require-dev": {
        "behat/behat": "*",
        "phpunit/phpunit": "*"
    }
}
